@model EmployeeApp.Web.Models.Employee[]
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
    <html>
    <head>
        <title>Employees</title>
    </head>
    <body>
        <h1>Employees</h1>
        <ul>
            @foreach (var employee in Model)
            {
                <li>
                    <h3>@employee.Name</h3>
                </li>
            }
        </ul>
        <a asp-action="Create">Add new employee</a>
    </body>
    </html>
